<?xml version="1.0" encoding="UTF-8"?>
<w:PopContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
                  x:Class="HandSchool.Views.LoginPage"
                  xmlns:w="clr-namespace:HandSchool.Views"
		          Title="登录教务系统">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="登录" x:Name="LoginButton" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Padding="15">
            <Entry Text="{Binding Service.Username}" Placeholder="用户名" FontSize="Medium" />
            <Entry Text="{Binding Service.Password}" Placeholder="密码" IsPassword="True"  FontSize="Medium" />
            <Label Text="{Binding Service.Tips}" FontSize="Medium" />
            <TableView Intent="Form">
                <TableSection>
                    <SwitchCell Text="保存密码" x:Name="SavePassword" />
                    <SwitchCell Text="自动登录" x:Name="AutoLogin" />
                </TableSection>
            </TableView>
        </StackLayout>
    </ContentPage.Content>
</w:PopContentPage>
