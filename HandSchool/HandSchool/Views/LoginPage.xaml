<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="HandSchool.Views.LoginPage"
		     Title="登录教务系统">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="登录" Clicked="Login_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="用户名" FontSize="Medium" />
            <Entry Text="{Binding Service.Username}" FontSize="Medium" />
            <Label Text="密码" FontSize="Medium" />
            <Entry Text="{Binding Service.Password}" IsPassword="True"  FontSize="Medium" />
            <Label Text="{Binding Service.Tips}" FontSize="Medium" />
            <TableView Intent="Form">
                <TableSection>
                    <SwitchCell Text="保存密码" x:Name="SavePassword" />
                    <SwitchCell Text="自动登录" x:Name="AutoLogin" />
                </TableSection>
            </TableView>
            <!--
            
            {Binding Service.AutoLogin}{Binding Service.SavePassword}-->
            <Button Margin="0,10,0,0" Text="登录" x:Name="LoginButton" BackgroundColor="{StaticResource Primary}" TextColor="White" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
